// Place your settings in this file to overwrite the default settings
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/assets/js/build": true,
    "**/stats.json": true,
    "**/.next": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/build": true,
    "**/dist": true,
    "**/infrastructure/environment/.terraform": true,
    "**/infrastructure/vendor": true
  },
  "files.watcherExclude": {
    "**/.DS_Store": true,
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/build": true,
    "**/dist": true,
    "**/assets/js/build": true,
    "**/stats.json": true,
    "**/.next": true
  },
  "editor.tabSize": 2,
  "editor.fontFamily": "Operator Mono",
  "editor.rulers": [100],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.renderWhitespace": "boundary",
  "editor.cursorBlinking": "phase",
  "editor.bracketPairColorization.enabled": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "Operator Mono",
  "terminal.integrated.fontSize": 11,
  "window.openFoldersInNewWindow": "on",
  "color-highlight.markerType": "dot-after",
  "auto-close-tag.SublimeText3Mode": true,
  "projectManager.vscode.baseFolders": [
    "/Users/donny/Sites",
    "/Users/donny/Projects"
  ],
  "projectManager.vscode.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "test",
    "build",
    "dist"
  ],
  "projectManager.vscode.maxDepthRecursion": 1,
  "projectManager.git.baseFolders": [
    "/Users/donny/Sites",
    "/Users/donny/Projects"
  ],
  "projectManager.git.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "test",
    "build",
    "dist"
  ],
  "projectManager.git.maxDepthRecursion": 1,
  "projectManager.cacheProjectsBetweenSessions": true,
  "files.associations": {
    "*.html": "handlebars",
    "*.tsx": "typescriptreact"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  "typescript.check.npmIsInstalled": false,
  "git.enableSmartCommit": true,
  "window.zoomLevel": 0,
  "typescript.validate.enable": true,
  "javascript.validate.enable": true,
  "css.validate": false,
  "editor.formatOnSave": true,
  "bracketPairColorizer.showHorizontalScopeLine": false,
  "bracketPairColorizer.consecutivePairColors": [
    "()",
    "[]",
    "{}",
    ["#ff6ac1", "#9aedfe", "#57c7ff"],
    "Red"
  ],
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Snazzy Operator",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "gitlens.currentLine.format": "${author, }${agoOrDate}${' via 'pullRequest}",
  "editor.guides.indentation": true,
  "githubPullRequests.pullBranch": "never"
}
